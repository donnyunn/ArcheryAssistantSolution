<Window x:Class="PressureMapViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1080" Width="1920">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 왼쪽: 2D 히트맵 -->
        <Border Grid.Column="0" 
            Background="#1F1F1F" 
            Margin="20">
            <Image x:Name="HeatmapImage" 
                RenderOptions.BitmapScalingMode="NearestNeighbor"
                Stretch="Uniform"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Border>

        <!-- 오른쪽: 3D 뷰 -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Viewport3D x:Name="viewport3D" Grid.Row="0">
                <Viewport3D.Camera>
                    <PerspectiveCamera x:Name="camera" 
                                    Position="3,4,5" 
                                    LookDirection="-3,-4,-5"
                                    UpDirection="0,0,1"
                                    FieldOfView="60"/>
                </Viewport3D.Camera>
                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
                <ModelVisual3D x:Name="pressureMesh"/>
            </Viewport3D>

            <!-- 카메라 컨트롤 -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Bottom" 
                        HorizontalAlignment="Center" 
                        Margin="10">
                <Button Content="Reset View" Click="ResetView_Click" Margin="5"/>
                <Button Content="Rotate Left" Click="RotateLeft_Click" Margin="5"/>
                <Button Content="Rotate Right" Click="RotateRight_Click" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
