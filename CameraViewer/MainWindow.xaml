<Window x:Class="CameraViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CameraViewer" Height="1080" Width="1920"
        Background="#1F1F1F">
    <Grid>
        <Image x:Name="DisplayImage"
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="HighQuality"/>

        <!-- 드로잉 레이어 -->
        <Canvas x:Name="DrawingCanvas" 
                IsHitTestVisible="True"
                Background="Transparent"/>

        <!-- 상태 텍스트 -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <TextBlock x:Name="FPSText"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,0"
                           FontSize="96"
                           FontFamily="Arial"
                           Foreground="White"
                           Background="#80000000"
                           Opacity="0.7"/>

                <TextBlock x:Name="StatusText2"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,0"
                           FontSize="48"
                           FontFamily="Arial"
                           Foreground="Yellow"
                           Background="#80000000"
                           Opacity="0.5"/>
            </Grid>
            <Grid Grid.Column="1">
                <TextBlock x:Name="StatusText"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Margin="0"
                           FontSize="96"
                           FontFamily="Arial"
                           Foreground="White"
                           Background="#80000000"
                           Opacity="0.7"/>
            </Grid>
        </Grid>

        <!-- 우측 도구 메뉴 패널 -->
        <Border x:Name="ToolPanel"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                Background="#80000000"
                BorderBrush="#40FFFFFF"
                BorderThickness="1"
                CornerRadius="10"
                Padding="10">
            <StackPanel Orientation="Vertical" Margin="0">
                <!-- 도구 모드 선택 버튼 -->
                <GroupBox Header="도구" Foreground="White" BorderBrush="#40FFFFFF" Margin="0,0,0,5">
                    <StackPanel Orientation="Vertical">
                        <RadioButton x:Name="FreeLineButton" 
                                     Content=" 자유 직선" 
                                     Foreground="White" 
                                     IsChecked="True"
                                     Margin="5,5,5,5"
                                     FontSize="24"
                                     VerticalContentAlignment="Center"
                                     Checked="DrawingModeButton_Checked"/>
                        <RadioButton x:Name="StraightLineButton" 
                                     Content=" 수직선" 
                                     Foreground="White"
                                     Margin="5,5,5,5"
                                     FontSize="24"
                                     VerticalContentAlignment="Center"
                                     Checked="DrawingModeButton_Checked"/>
                        <RadioButton x:Name="CircleButton" 
                                     Content=" 원" 
                                     Foreground="White"
                                     Margin="5,5,5,5"
                                     FontSize="24"
                                     VerticalContentAlignment="Center"
                                     Checked="DrawingModeButton_Checked"/>
                    </StackPanel>
                </GroupBox>

                <!-- 색상 선택 버튼 -->
                <GroupBox Header="색상" Foreground="White" BorderBrush="#40FFFFFF">
                    <StackPanel Orientation="Vertical">
                        <RadioButton x:Name="YellowColorButton" 
                                     Content="노랑" 
                                     Foreground="Yellow" 
                                     IsChecked="True"
                                     Margin="5,5,5,5"
                                     FontSize="24"
                                     Checked="ColorButton_Checked">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="16" Height="16" Fill="Yellow" Margin="0,0,5,0"/>
                                        <ContentPresenter VerticalAlignment="Center"/>
                                        <Border x:Name="CheckMark" Width="8" Height="8" Background="White" CornerRadius="4" Margin="5,0,0,0" Visibility="Collapsed"/>
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                        <RadioButton x:Name="RedColorButton" 
                                     Content="빨강" 
                                     Foreground="Red"
                                     Margin="5,5,5,5"
                                     FontSize="24"
                                     Checked="ColorButton_Checked">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="16" Height="16" Fill="Red" Margin="0,0,5,0"/>
                                        <ContentPresenter VerticalAlignment="Center"/>
                                        <Border x:Name="CheckMark" Width="8" Height="8" Background="White" CornerRadius="4" Margin="5,0,0,0" Visibility="Collapsed"/>
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                        <RadioButton x:Name="BlueColorButton" 
                                     Content="파랑" 
                                     Foreground="Blue"
                                     Margin="5,5,5,5"
                                     FontSize="24"
                                     Checked="ColorButton_Checked">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="16" Height="16" Fill="Blue" Margin="0,0,5,0"/>
                                        <ContentPresenter VerticalAlignment="Center"/>
                                        <Border x:Name="CheckMark" Width="8" Height="8" Background="White" CornerRadius="4" Margin="5,0,0,0" Visibility="Collapsed"/>
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                        <RadioButton x:Name="GreenColorButton" 
                                     Content="초록" 
                                     Foreground="Green"
                                     Margin="5,5,5,5"
                                     FontSize="24"
                                     Checked="ColorButton_Checked">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="16" Height="16" Fill="Green" Margin="0,0,5,0"/>
                                        <ContentPresenter VerticalAlignment="Center"/>
                                        <Border x:Name="CheckMark" Width="8" Height="8" Background="White" CornerRadius="4" Margin="5,0,0,0" Visibility="Collapsed"/>
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </StackPanel>
                </GroupBox>

                <!-- 지우기 버튼 -->
                <Button x:Name="ClearButton"
                        Content="지우기"
                        Padding="10,5"
                        Background="#40000000"
                        Foreground="White"
                        BorderBrush="#40FFFFFF"
                                     Margin="5,5,5,5"
                        FontSize="24"
                        Click="ClearButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <GroupBox Header="시점" Foreground="White" BorderBrush="#40FFFFFF" Margin="0,20,0,0">
                    <StackPanel Orientation="Vertical">
                        <RadioButton x:Name="NormalViewButton" 
                                     Content=" 카메라" 
                                     Foreground="White" 
                                     Margin="5,5,5,5"
                                     FontSize="24"
                                     VerticalContentAlignment="Center"
                                     Checked="ViewModeButton_Checked"/>
                        <RadioButton x:Name="MirrorViewButton" 
                                     Content=" 거울" 
                                     Foreground="White"
                                     IsChecked="True"
                                     Margin="5,5,5,5"
                                     FontSize="24"
                                     VerticalContentAlignment="Center"
                                     Checked="ViewModeButton_Checked"/>
                    </StackPanel>
                </GroupBox>
                <!-- 교체 버튼 -->
                <Button x:Name="SwapButton"
                        Content="위아래교체"
                        Padding="10,5"
                        Background="#40000000"
                        Foreground="White"
                        BorderBrush="#40FFFFFF"
                                     Margin="5,5,5,5"
                        FontSize="24"
                        Click="SwapButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" 
                                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
